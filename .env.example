# Docker Compose Environment Variables
# Copy this file to .env and configure for Docker environment

# ===========================================
# TMDb API Configuration
# ===========================================
TMDB_API_KEY=your_tmdb_api_key_here

# ===========================================
# Database Configuration (Docker)
# ===========================================
POSTGRES_DB=movieapi
POSTGRES_USER=movieapi
POSTGRES_PASSWORD=secure_password

# ===========================================
# Security Configuration
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long

# Database Administration (pgAdmin)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# Development/Debug Configuration
# pprof profiling (available at http://localhost:6060/debug/pprof/ in development)
PPROF_ENABLED=true
PPROF_PORT=6060

# Delve debugger (connects to port 2345 when using Docker debug mode)
DEBUG_PORT=2345

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8080/api/v1
NODE_ENV=development